rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Require authentication
    function isSignedIn() { return request.auth != null; }
    function isOwner(data) { return isSignedIn() && data.userId == request.auth.uid; }

    match /bills/{id} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /incomes/{id} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    match /purchases/{id} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isOwner(request.resource.data);
    }

    // health-test docs only for sanity checks (optional: lock down in prod)
    match /health-test/{id} {
      allow read, write: if isSignedIn();
    }
  }
}

